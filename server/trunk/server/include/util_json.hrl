-include("rfc4627.hrl").

%% ===================================================================
%% define
%% ===================================================================
-define(JSON_TO_RECORD(RcName, Json), 
	case rfc4627:decode(Json) of
		{ok, RequestEnc, []} -> ?RFC4627_TO_RECORD(RcName, RequestEnc);
		_ -> undefined
	end).

-define(JSON_FROM_RECORD(RcName, R), rfc4627:encode(?RFC4627_FROM_RECORD(RcName, R))).

